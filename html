    <script>
        document.getElementById('bookingForm').addEventListener('submit', function(event) {
            event.preventDefault();
            alert('Appointment booked successfully!');
            // Here you can add code to handle form submission, e.g., sending data to a server
        });

        document.getElementById('placeBookingForm').addEventListener('submit', function(event) {
            event.preventDefault();
            alert('Place booked successfully!');
            // Here you can add code to handle form submission, e.g., sending data to a server
        });

        function payNow() {
            const amount = document.getElementById('payment-amount').value;
            if (amount && amount > 0) {
                // Simulasi pengiriman data pembayaran ke server DANA (contoh)
                fetch('https://api.dana.com/payments', {
                        method: 'POST',
                        body: JSON.stringify({
                            amount: amount,
                            customerId: 'your_customer_id_here', // Ganti dengan ID pelanggan Anda di DANA
                            merchantId: 'your_merchant_id_here', // Ganti dengan ID merchant Anda di DANA
                            // tambahkan informasi tambahan yang diperlukan
                        }),
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        // Simulasi berhasil atau gagal
                        if (data.success) {
                            alert('Payment processed successfully for amount: ' + amount);
                            // Tambahkan logika lain setelah pembayaran berhasil
                        } else {
                            alert('Payment failed. Please try again later.');
                            // Tambahkan logika lain jika pembayaran gagal
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred. Please try again later.');
                    });
            } else {
                alert('Please enter a valid payment amount.');
            }
        }
    </script>
